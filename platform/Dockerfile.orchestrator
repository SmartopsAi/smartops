FROM python:3.11-slim

WORKDIR /app

# install deps first
COPY apps/orchestrator/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# copy entire project (needed so "apps.orchestrator" imports work)
COPY apps /app/apps

# expose orchestrator port
EXPOSE 8001

CMD ["uvicorn", "apps.orchestrator.app:app", "--host", "0.0.0.0", "--port", "8001"]
